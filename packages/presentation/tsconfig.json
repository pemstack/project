{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "paths": {
      "@my-app/shared/lib/*": [
        "../../shared/src/*"
      ],
      "@my-app/*": [
        "../../*"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./lib/**/*",
    "**/node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
